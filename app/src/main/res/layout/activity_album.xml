<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codyy.widgets.AlbumActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_green"
        app:title="选择图片"
        app:titleTextColor="@android:color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/llBottomContainer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/textView_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:text="预览"
            android:textColor="#69be40"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_preview_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignEnd="@+id/textView_preview"
            android:layout_alignRight="@+id/textView_preview"
            android:layout_alignTop="@+id/textView_preview"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/oval_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="确定"
            android:textColor="#69be40"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>
